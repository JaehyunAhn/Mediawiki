    DIR *dir_info;
    struct dirent *dir_entry;

    dir_info = opendir("./");
    if(dir_info) {
        while( dir_entry = readdir(dir_info)) {
            printf("%s\n",dir_entry->d_name);
        }
        closedir(dir_info);
    }

}
